<Window x:Class="openvoice_wpf.AddBtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:openvoice_wpf"
        mc:Ignorable="d"
        Background="#FF333333"
        MinHeight="380"
        MaxHeight="380"
        MinWidth="601"
        MaxWidth="601"
        Title="Add a Bluetooth connection" Height="380" Width="601">
    <Grid>
        <Label x:Name="title" Foreground="#fff" Style="{DynamicResource MaterialDesignLabel}" Content="Add a Bluetooth connection" HorizontalAlignment="Center" FontFamily="Segoe UI Light" FontSize="16" Margin="0,22,0,0" VerticalAlignment="Top"/>
        <Label Name="btLbl" Foreground="#fff" Style="{DynamicResource MaterialDesignLabel}" Content="Paired Device:" HorizontalAlignment="Left" FontFamily="Segoe UI Light" FontSize="16" Margin="138,110,0,0" VerticalAlignment="Top"/>
        <ComboBox Style="{DynamicResource MaterialDesignComboBox}" Name="pairedDeviceCBox"  Background="#fff" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="315"/>
        <Button Content="Add Connection" Style="{DynamicResource MaterialDesignRaisedButton}" Name="createConnBtn" Margin="169,222,169,80" Click="createConnBtn_Click"/>
    </Grid>
</Window>
